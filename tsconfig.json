{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "utils",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
    "lib": [
      "es2019",
      "dom",
      "dom.iterable"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "preserveWatchOutput": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/assets"
  ]
}
